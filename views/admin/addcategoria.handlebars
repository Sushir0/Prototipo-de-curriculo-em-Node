    <div class="alert alert-danger" role="alert">
        {{texto}}
    </div>
{{else}}

{{/each}}
<h2>Nova categoria:</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post">
        <label for="nome">Nome: </label>
        <input type="text" name="nome" id="nome" placeholder="nome da categoria" class="form-control" value="{{categoria.nome}}">
        <label for="slug">Slug: </label>
        <input type="slug" name="slug" id="slug" placeholder="Slug da categoria" class="form-control" value="{{categoria.slug}}">
        <input class="btn btn-primary mt-4" type="submit" value="Criar categoria" placeholder="criar categoria">
        </form>
    </div>
</div>