
<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-success">Nova categoria</button></a>


{{#each categorias}}


<div class="card text-center mt-4">
  <div class="card-body">
    <h5 class="card-title">{{nome}}</h5>
    <p class="card-text">{{slug}}</p>
    <a href="/admin/categorias/edit/{{id}}">
        <button type="button" class="btn btn-primary">Editar</button>
    </a>
    <a href="/admin/categorias/deletar/{{id}}">
      <button type="button"  class="btn btn-danger">excluir</button>
    </a>
  </div>
</div>


{{else}}
<h4>nenhuma categoria registrada</h4>
{{/each}}
